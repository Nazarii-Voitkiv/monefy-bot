{
  "name": "monefy-bot",
  "version": "1.0.0",
  "description": "Telegram bot for personal finance tracking with multi-currency support.",
  "main": "dist/bot/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/bot/index.js",
    "dev": "tsx watch src/bot/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"scripts/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate",
    "seed": "tsx scripts/seed.ts",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down --volumes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nazarii-Voitkiv/monefy-bot.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "bugs": {
    "url": "https://github.com/Nazarii-Voitkiv/monefy-bot/issues"
  },
  "homepage": "https://github.com/Nazarii-Voitkiv/monefy-bot#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.3",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.7",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "drizzle-kit": "^0.25.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
